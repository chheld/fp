<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ivOrder"
        android:src="@drawable/ic_order"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAuftrag"
        android:text="Auftrag"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivOrder"
        android:layout_marginRight="5dp"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvANr"
        android:text="&lt;Nr>"
        android:layout_toRightOf="@+id/lblAuftrag"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kunde &lt;Nr>"
        android:id="@+id/tvKdNr"
        android:ellipsize="end"
        android:layout_below="@+id/lblAuftrag"
        android:layout_toRightOf="@+id/ivOrder"
        android:layout_marginTop="5dp"
        android:textAppearance="@android:style/TextAppearance.Theme" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Kundensuchbezeichnung>"
        android:id="@+id/tvKTxt"
        android:ellipsize="end"
        android:layout_below="@+id/tvKdNr"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/lblAuftrag"
        android:layout_alignStart="@+id/tvKdNr"
        android:maxLines="2"
        android:textAppearance="@android:style/TextAppearance.Theme" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Bemerkung>"
        android:id="@+id/tvBemerkung"
        android:ellipsize="end"
        android:layout_below="@+id/tvKTxt"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/tvKTxt"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/ivOrder" />

</RelativeLayout>